
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/register_activity"
    android:background="@drawable/pip_background">

    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"

    tools:context="com.tcss450.moneyteam.geotracker.activities.RegisterActivity"
        android:layout_marginBottom="80dp">
    <!--Alex likes crack-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_label"
                android:id="@+id/textView3"
                android:singleLine="true"
                android:textColor="#ff11f97c" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_email"
                android:textCursorDrawable="@color/pip_light_neon"
                android:inputType="textEmailAddress"
                android:textColor="#ff11f97c"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text_gradient"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_password"
                android:id="@+id/textView5"
                android:textColor="#ff11f97c" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_password"
                android:textCursorDrawable="@color/pip_light_neon"
                android:background="@drawable/edit_text_gradient"
                android:password="true"
                android:inputType="text"
                android:textColor="#ff11f97c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoText="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/textView5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_repeat_password"
                android:id="@+id/textView6"
                android:singleLine="true"
                android:textColor="#ff11f97c" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_repeat_password"
                android:textCursorDrawable="@color/pip_light_neon"
                android:background="@drawable/edit_text_gradient"
                android:password="true"
                android:inputType="text"
                android:textColor="#ff11f97c"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/textView6" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_security_question"
                android:id="@+id/textView7"

                android:textColor="#ff11f97c" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_security_spinner"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:touchscreenBlocksFocus="false"
                android:textColor="#ff11f97c"
                android:background="@drawable/pip_blank_background"
                android:layout_below="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_your_answer"
                android:id="@+id/textView8"
                android:singleLine="true"
                android:textColor="#ff11f97c"
                android:layout_below="@+id/register_security_spinner" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_security_answer"
                android:textCursorDrawable="@color/pip_light_neon"
                android:background="@drawable/edit_text_gradient"
                android:textColor="#ff11f97c"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:layout_below="@+id/textView8" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/tos_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/register_tos"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ff11f97c"
                        android:layout_centerHorizontal="true"
                        android:layout_alignTop="@+id/imageView11" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView11"
                        android:background="@drawable/pip_title_hook" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tos_text_view"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:paddingLeft="6dip"
                    android:paddingRight="6dip"
                    android:paddingBottom="6dip"
                    android:text="@string/tos_text"
                    android:textColor="#ff11f97c"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoText="false" />
                    />

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:background="@drawable/pip_hud_flat_bar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_agree_tos"
            android:id="@+id/register_checkbox"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textColor="#ff11f97c"
            android:buttonTint="#ff11f97c"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="registerUser"
            android:background="@drawable/pip_button_background_alpha">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_register"
                android:id="@+id/register_register_button"
                android:layout_gravity="center_horizontal"
                android:onClick="registerUser"
                android:background="@drawable/pip_button_outline"
                android:textColor="#ff11f97c" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:background="@drawable/pip_hud_flat_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/registration_progress"
                android:id="@+id/textView11"
                android:textColor="#ff11f97c"
                android:layout_marginStart="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_progress"
                android:src="@drawable/pip_progress_0"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/register_zero" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_progress_icon"
            android:background="@drawable/pip_advent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</RelativeLayout>
