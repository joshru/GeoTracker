<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"

    tools:context="com.tcss450.moneyteam.geotracker.RegisterActivity">
    <!--Alex likes crack-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:id="@+id/textView3"
            android:singleLine="true"
            android:layout_marginTop="64dp"
             />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_email"

            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/textView5"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_password"

            android:password="true"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat Password"
            android:id="@+id/textView6"
            android:singleLine="true"
             />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_repeat_password"
            android:password="true"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Question"
            android:id="@+id/textView7"

            android:layout_marginTop="30dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_security_spinner"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:touchscreenBlocksFocus="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:id="@+id/textView8"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_security_answer"
             />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <ScrollView
            android:id="@+id/tos_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip"
                    android:paddingTop="6dip"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="GeoTracker: Terms of Service"
                    android:layout_gravity="center_horizontal" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#ff000000"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="6dip"
                    android:layout_marginBottom="12dip" />

                <TextView
                    android:id="@+id/tos_text_view"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"

                    android:paddingLeft="6dip"
                    android:paddingRight="6dip"
                    android:paddingBottom="6dip"
                    android:text="@string/tos_text" />
                    />

            </LinearLayout>
        </ScrollView>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="I have read and understand the terms of service, and agree to them completely."
            android:id="@+id/register_checkbox"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/register_register_button"
            android:layout_marginBottom="31dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:onClick="registerUser" />

    </LinearLayout>
</ScrollView>
