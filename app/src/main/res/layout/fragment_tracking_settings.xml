<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pip_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:background="@drawable/pip_title_hook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location Data"
            android:id="@+id/textView17"
            android:layout_centerHorizontal="true"
            android:textColor="#ff11f97c"
            android:layout_alignTop="@+id/imageView10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/pip_textview_hook">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/textView13"
            android:layout_alignLeft="@+id/f_location_date_text_start"
            android:textColor="@color/pip_light_neon"
            android:paddingTop="5dp"
            android:layout_below="@+id/textView22" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/f_location_date_text_start"
            android:textCursorDrawable="@color/pip_light_neon"
            android:inputType="textEmailAddress"
            android:textColor="#ff11f97c"
            android:layout_below="@+id/textView13"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_gradient"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/textView19"
            android:layout_alignLeft="@+id/f_location_time_text_start"
            android:textColor="@color/pip_light_neon"
            android:paddingTop="5dp"
            android:layout_above="@+id/f_location_time_text_start" />"
            android:textColor="@color/pip_light_neon" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/f_location_time_text_start"
            android:textCursorDrawable="@color/pip_light_neon"
            android:inputType="textEmailAddress"
            android:textColor="#ff11f97c"
            android:layout_below="@+id/textView13"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_gradient"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/f_location_date_text_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start"
            android:id="@+id/textView22"
            android:layout_alignEnd="@+id/f_location_date_text_start"
            android:layout_marginRight="80dp"
            android:layout_marginEnd="80dp"
            android:textColor="@color/pip_light_neon"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pip_textview_hook"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/f_location_date_text_end"
            android:textCursorDrawable="@color/pip_light_neon"
            android:inputType="textEmailAddress"
            android:textColor="#ff11f97c"
            android:layout_below="@+id/textView20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_gradient"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/textView20"
            android:layout_alignLeft="@+id/f_location_date_text_end"
            android:textColor="@color/pip_light_neon"
            android:paddingTop="5dp"
            android:layout_below="@+id/textView23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/textView21"
            android:layout_alignLeft="@+id/f_location_time_text_end"
            android:textColor="@color/pip_light_neon"
            android:paddingTop="5dp"
            android:layout_above="@+id/f_location_time_text_end" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/f_location_time_text_end"
            android:textCursorDrawable="@color/pip_light_neon"
            android:inputType="textEmailAddress"
            android:textColor="#ff11f97c"
            android:layout_below="@+id/textView20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_gradient"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/f_location_date_text_end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="End"
            android:id="@+id/textView23"
            android:textColor="@color/pip_light_neon" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Get Location Data"
        android:id="@+id/f_location_get_Data"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_gradient"
        android:textColor="@color/pip_light_neon" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/pip_hud_flat_bar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/pip_hud_flat_bar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location Tracking"
            android:id="@+id/textView9"
            android:textColor="@color/pip_light_neon"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <ToggleButton
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="New ToggleButton"
            android:id="@+id/f_tracking_toggle_button"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:layout_alignParentEnd="false"
            android:textOff="0ff"
            android:textOn="0n"
            android:textColor="@color/pip_light_neon"
            android:background="@drawable/edit_text_gradient"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tracking Frequency"
            android:id="@+id/textView10"
            android:layout_marginLeft="15dp"
            android:textColor="@color/pip_light_neon"
            android:layout_centerHorizontal="true" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:secondaryProgress="0"
            android:id="@+id/f_tracking_seeker"
            android:max="10"
            android:layout_alignParentEnd="true"
            android:progress="0"
            android:indeterminate="false"
            android:layout_below="@+id/textView10"
            android:progressDrawable="@drawable/progress_draweable"


            android:thumb="@drawable/thumb_drawable"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location updates will occur every 1 minute"
        android:id="@+id/f_tracking_seeker_time"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/pip_hint_shade" />

</LinearLayout>