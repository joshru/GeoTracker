<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pip_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:background="@drawable/pip_title_hook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location Data"
            android:id="@+id/textView17"
            android:layout_centerHorizontal="true"
            android:textColor="#ff11f97c"
            android:layout_alignTop="@+id/imageView10" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/pip_hud_flat_bar"
        android:layout_marginBottom="10dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/pip_hud_flat_bar"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location Tracking"
            android:id="@+id/textView9"
            android:textColor="@color/pip_light_neon"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <ToggleButton
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="New ToggleButton"
            android:id="@+id/f_tracking_toggle_button"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:layout_alignParentEnd="false"
            android:textOff="0ff"
            android:textOn="0n"
            android:textColor="@color/pip_light_neon"
            android:background="@drawable/edit_text_gradient"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tracking Frequency"
            android:id="@+id/textView10"
            android:layout_marginLeft="15dp"
            android:textColor="@color/pip_light_neon"
            android:layout_centerHorizontal="true" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:secondaryProgress="0"
            android:id="@+id/f_tracking_seeker"
            android:max="10"
            android:layout_alignParentEnd="true"
            android:progress="0"
            android:indeterminate="false"
            android:layout_below="@+id/textView10"
            android:progressDrawable="@drawable/progress_draweable"


            android:thumb="@drawable/thumb_drawable"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location updates will occur every 1 minute"
        android:id="@+id/f_tracking_seeker_time"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/pip_hint_shade" />

</LinearLayout>