<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/pip_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:background="@drawable/pip_title_hook"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/account_details_title"
            android:id="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:textColor="#ff11f97c" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/f_email_layout"
        android:background="@drawable/edit_text_gradient_inverse"
        android:layout_margin="10dp"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/account_registered_email"
            android:id="@+id/textView15"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="20dp"
            android:textColor="#ff11f97c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/account_fill"
            android:id="@+id/f_account_email"
            android:textColor="#ff11f97c"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_gradient_inverse"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location Tracking"
            android:id="@+id/textView16"
            android:textColor="@color/pip_light_neon"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <ToggleButton
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:layout_alignParentEnd="false"
            android:textOff="0ff"
            android:textOn="0n"
            android:textColor="@color/pip_light_neon"
            android:background="@drawable/edit_text_gradient"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_margin="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_gradient_inverse"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tracking Frequency"
            android:id="@+id/textView18"
            android:textColor="@color/pip_light_neon"
            android:layout_centerHorizontal="true" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:secondaryProgress="0"
            android:id="@+id/seekBar"
            android:max="20"
            android:layout_alignParentEnd="true"
            android:progress="0"
            android:indeterminate="false"
            android:layout_below="@+id/textView18"
            android:progressDrawable="@drawable/progress_draweable"
            android:thumb="@drawable/thumb_drawable"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location updates will occur every 1 minute"
            android:id="@+id/f_seek_time_label"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/pip_hint_shade"
            android:layout_below="@+id/seekBar"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_gradient_inverse"
        android:padding="8dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/server_spinner"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:touchscreenBlocksFocus="false"
            android:textColor="#ff11f97c"
            android:background="@drawable/pip_blank_background"
            android:layout_below="@+id/textView9"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Server Backup Intervals"
            android:id="@+id/textView9"
            android:textColor="#ff11f97c"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_small_material" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/account_reset_password_button"
            android:id="@+id/account_password_reset"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:background="@drawable/edit_text_gradient"
            android:textColor="@color/pip_light_neon"
            android:textSize="13sp"
            android:layout_alignParentStart="false"
            android:layout_toLeftOf="@+id/f_db_button"
            android:layout_margin="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sync Data To Server"
            android:id="@+id/f_db_button"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text_gradient"
            android:textColor="@color/pip_light_neon"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>